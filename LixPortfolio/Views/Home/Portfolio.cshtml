@model LixPortfolio.Models.ViewModel

@{ViewBag.Title = "Portfolio";
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Screen - Multipurpose Template By Bootstrapious.com</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <!-- Google fonts-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Cardo:400,400i">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,700">
    <!-- Lightbox-->
    <link rel="stylesheet" href="~/vendor/lightbox2/css/lightbox.min.css">
    <!-- Font Awesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <!-- Parallax-->
    <link rel="stylesheet" href="~/vendor/onepage-scroll/onepage-scroll.css">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="~/css/style.default.css" id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="~/css/custom.css">
    <!-- Favicon-->
    <link rel="shortcut icon" href="~/favicon.png">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body class="viewing-page-1 disabled-onepage-scroll">
    <ul class="onepage-pagination"><li><a data-index="1" href="#1" class="active"></a></li><li><a data-index="2" href="#2"></a></li><li><a data-index="3" href="#3"></a></li><li><a data-index="4" href="#4"></a></li><li><a data-index="5" href="#5"></a></li><li><a data-index="6" href="#6"></a></li></ul>
    <div class="main onepage-wrapper" style="position: relative;">
        <section class="bg-cover bg-center hero section active" data-index="1" style="position: absolute; top: 0%; left: 0px;">
            <div class="dark-overlay"></div>
            <div class="position-relative z-index-1">
                <div class="container text-center text-white">
                    @if (Model.Personal != null)
                    {
                        foreach (var item in Model.Personal)
                        {
                            <h1 class="text-uppercase my-4">
                                if(@Html.Raw(item.Name) .isCool)

                            </h1>

                            <h1 class="text-uppercase my-4">
                                {  Choose( @Html.Raw(item.Name)  );  }

                            </h1>

                            break; // duhet mi ndreq qito nese du me bo ma shum cv per ni user but for now veq njo not the best way lol
                        }
                    }
                </div>
            </div>
            <div class="scroll-btn link-scroll"><i class="fas fa-angle-double-down"></i></div>
        </section>
        <section id="1" class="section" data-index="2" style="position: absolute; top: 100%; left: 0px;">
            <div class="d-flex h-100 align-items-center">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-6 mb-4 mb-lg-0">
                            <header class="text-center">
                                <h2 class="text-uppercase lined">About Me</h2>
                            </header>
                            <p class="lead"></p>
                            @if (Model.Personal != null)
                            {
                                foreach (var item in Model.Personal)
                                {
                                    <p>Hello I'm @Html.Raw(item.Name)  @Html.Raw(item.Surname) </p>
                                    <p> @Html.Raw(item.Description)</p>
                                    break; // duhet mi ndreq qito nese du me bo ma shum cv per ni user but for now veq njo not the best way lol
                                }
                            }


                        </div>
                        <div class="col-lg-6"><img src="img/about.jpg" alt="..." class="img-fluid rounded-circle d-block mx-auto"></div>
                    </div>
                </div>
            </div>
        </section>
        <section class="bg-gray section" data-index="3" style="position: absolute; top: 200%; left: 0px;">
            <div class="d-flex h-100 align-items-center">
                <div class="container">
                    <header class="mb-5 text-center">
                        <h2 class="text-uppercase lined">Education</h2>
                    </header>
                    <div class="row text-center">

                        @if (Model.AcademicLife != null)
                        {
                            foreach (var item in Model.AcademicLife.OrderByDescending(x => x.StartDate))
                            {

                                <div class="col-lg-4 col-md-6 mb-4">

                                    <h4 class="text-uppercase lined lined-compact">@Html.Raw(item.Academy)</h4>
                                    <h5 class="text-uppercase lined lined-compact">@Html.Raw(item.AcademicType1.AcademyType)</h5>
                                    <p class="text-mted">Started on @Html.Raw(item.StartDate) </p>
                                    <p class="text-mted">Ended on @Html.Raw(item.EndDate) </p>
                                    <p class="text-mted">@Html.Raw(item.Description)</p>
                                </div>

                            }
                        }


                    </div>
                </div>
            </div>
        </section>
        <section class="section" data-index="4" style="position: absolute; top: 300%; left: 0px;">
            <div class="d-flex h-100 align-items-center">
                <div class="container">
                    <header class="text-center mb-5">
                        <h2 class="text-uppercase lined">Work Experience</h2>
                    </header>
                    <div class="row">
                        <div class="col-lg-12 text-center">

                        </div>
                        @if (Model.Experiences != null)
                        {
                            foreach (var item in Model.Experiences.OrderByDescending(x => x.StartDate))
                            {

                                <div class="col-lg-4 col-md-6 mb-4">

                                    <h4 class="text-uppercase lined lined-compact">@Html.Raw(item.WorkType1.WorkType1)</h4>
                                    <h5 class="text-uppercase lined lined-compact">@Html.Raw(item.WorkPlace)</h5>

                                    <p class="text-mted">Started on @Html.Raw(item.StartDate) </p>
                                    <p class="text-mted">Ended on @Html.Raw(item.EndDate) </p>
                                    <p class="text-mted">@Html.Raw(item.Description)</p>
                                </div>

                            }
                        }

                    </div>
                </div>
            </div>
        </section>
        <section class="bg-gray section" data-index="5" style="position: absolute; top: 400%; left: 0px;">
            <div class="d-flex h-100 align-items-center">
                <div class="container">
                    <header class="text-center mb-5">
                        <h2 class="text-uppercase lined">Skills</h2>
                    </header>
                    <div class="row">
                        @if (Model.SkillTypes != null)
                        {
                            foreach (var item in Model.SkillTypes)
                            {

                                <div class="col-lg-6">
                                    <h5 class="text-uppercase lined lined-compact">@Html.Raw(item.SkillType1)</h5>

                                    @foreach (var skills in Model.Skills)
                                    {


                                        if (skills.SkillType1 == item)
                                        {

                                            <p>@Html.Raw(skills.Skill1)</p>
                                        }

                                    }
                                </div>

                            }
                        }

                    </div>
                </div>
            </div>
        </section>
        <section class="section" data-index="6" style="position: absolute; top: 500%; left: 0px;">
            <div class="d-flex h-100 align-items-center">
                <div class="container">
                    <header class="text-center mb-5">
                        <h2 class="text-uppercase lined">Hobbies</h2>
                    </header>
                    <div class="row">
                        <div class="col-lg-12 text-center">

                        </div>
                        @if (Model.Hobbies != null)
                        {
                            foreach (var item in Model.Hobbies)
                            {

                                <div class="col-lg-4 col-md-6 mb-4">


                                    <h5 class="text-uppercase lined lined-compact">@Html.Raw(item.Hoby)</h5>

                                </div>

                            }
                        }

                    </div>
                </div>
            </div>
        </section>
        <section class="section" data-index="7" style="position: absolute; top: 500%; left: 0px;">
            <div class="d-flex h-100 align-items-center">
                <div class="container">
                    <header class="text-center mb-5">
                        <h2 class="text-uppercase lined">Contact</h2>
                    </header>
                    <div class="row">

                        <div class="col-lg-6">
                            <ul class="mb-0 list-inline text-center">
                                @if (Model.Contacts != null)
                                {


                                    foreach (var item in Model.Contacts)
                                    {
                                        if (item.ContactType1.ContactName == "Facebook")
                                        {
                                            <li class="list-inline-item"><a href="@Html.Raw(item.Contact1)" class="social-link social-link-email"><i class="fab fa-facebook-f"></i></a></li>


                                        }
                                        else if (item.ContactType1.ContactName == "Email")
                                        {

                                            <li class="list-inline-item"><a href="@Html.Raw(item.Contact1)" class="social-link social-link-email"><i class="fas fa-envelope"></i></a></li>

                                        }
                                        else if (item.ContactType1.ContactName == "Twitter")
                                        {
                                            <li class="list-inline-item"><a href="@Html.Raw(item.Contact1)" class="social-link social-link-twitter"><i class="fab fa-twitter"></i></a></li>


                                        }
                                        else if (item.ContactType1.ContactName == "Google Plus")
                                        {
                                            <li class="list-inline-item"><a href="@Html.Raw(item.Contact1)" class="social-link social-link-google-plus"><i class="fab fa-google-plus-g"></i></a></li>


                                        }
                                        else if (item.ContactType1.ContactName == "Instagram")
                                        {
                                            <li class="list-inline-item"><a href="@Html.Raw(item.Contact1)" class="social-link social-link-instagram"><i class="fab fa-instagram"></i></a></li>


                                        }


                                    }
                                }


                            </ul>
                        </div>
                    </div>
                    <footer class="py-5 mt-5">
                        <div class="row">
                            <div class="col-lg-6 text-center text-lg-left">
                                <p class="font-italic mb-0 text-gray">©LIX</p>
                            </div>
                            <div class="col-lg-6 text-center text-lg-right">
                            </div>
                        </div>
                    </footer>
                </div>
            </div>
        </section>
        <section class="section" data-index="8" style="position: absolute; top: 500%; left: 0px;">
            <div class="d-flex h-100 align-items-center">
                <div class="container">
                    <header class="text-center mb-5">
                        <h2 class="text-uppercase lined">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @Html.ActionLink("Manage My Account", "Contact", "Home")
                            }
                            else
                            {
                                @Html.ActionLink("LogIn", "Login", "Account")

                            }
                        </h2>
                    </header>
                    <div class="row">

                        <div class="col-lg-6">



                        </div>
                    </div>
                    <footer class="py-5 mt-5">
                        <div class="row">
                            <div class="col-lg-6 text-center text-lg-left">
                                <p class="font-italic mb-0 text-gray">©LIX</p>
                            </div>
                            <div class="col-lg-6 text-center text-lg-right">
                            </div>
                        </div>
                    </footer>
                </div>
            </div>
        </section>
        <section class="section" data-index="9" style="position: absolute; top: 500%; left: 0px;">
            <div class="d-flex h-100 align-items-center">
                <div class="container">
                    <header class="text-center mb-5">
                        <h2 class="text-uppercase lined">
                            
                                @Html.ActionLink("Search", "Index", "Home")
                          
                           
                        </h2>
                    </header>
                    <div class="row">

                        <div class="col-lg-6">



                        </div>
                    </div>
                    <footer class="py-5 mt-5">
                        <div class="row">
                            <div class="col-lg-6 text-center text-lg-left">
                                <p class="font-italic mb-0 text-gray">©LIX</p>
                            </div>
                            <div class="col-lg-6 text-center text-lg-right">
                            </div>
                        </div>
                    </footer>
                </div>
            </div>
        </section>

    </div>
    <!-- JavaScript files-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/onepage-scroll/jquery.onepage-scroll.min.js"></script>
    <script src="~/vendor/lightbox2/js/lightbox.min.js"></script>
    <script src="~/js/front.js"></script>
    <!-- FontAwesome CSS - loading as last, so it doesn't block rendering-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
</body>
</html>
